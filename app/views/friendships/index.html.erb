<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_with(url: search_friends_path) do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :friend, params[:friend], placeholder: "Firend email or name", autofocus: true, class: "form-control form-control-large" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do%>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= turbo_frame_tag 'results' do %>
  <%= render 'friendships/results' %>
<% end %>
<% if !@friends.empty? %>
  <%= render 'friendships/list' %>
<% end %>