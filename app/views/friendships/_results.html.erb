<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends_s %>
    <div class="card card-header results-block">
      <table class="col-md-12">
        <tbody>
          <% @friends_s.each do |friend| %>
            <tr>
              <td><strong>Name: </strong> <%= friend.full_name %></td>
              <td><strong>Email: </strong> <%= friend.email %></td>
              <td><%= link_to 'View profile', user_path(friend), class: "btn btn-success", data: {turbo: false} %></td>
              <td>
                <% if !current_user.is_friend?(friend.id) %>
                  <%= button_to 'Follow friend', friendships_path(friend: friend), class: "btn btn-success", method: :post, data: {turbo: false} %>
                <% else %>
                  <span class="ms-4">Following</span>
                <% end %>
              <td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% end %>
