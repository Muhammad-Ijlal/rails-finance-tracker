<h2>User Details</h2>
<div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td><strong>Name: </strong> <%= @user.full_name %></td>
        <td><strong>Email: </strong> <%= @user.email %></td>
        <td>
          <% if !current_user.is_friend?(@user.id) %>
            <%= button_to 'Follow friend', friendships_path(friend: @user), class: "btn btn-success", method: :post, data: {turbo: false} %>
          <% else %>
            <span class="ms-4">Following</span>
          <% end %>
        <td>
      </tr>
    </tbody>
  </table>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>